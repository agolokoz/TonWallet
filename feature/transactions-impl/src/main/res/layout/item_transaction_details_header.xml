<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingHorizontal="20dp"
    android:paddingBottom="12dp">

    <org.ton.wallet.uicomponents.view.amount.AmountView
        android:id="@+id/itemTransactionDetailsHeaderAmountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/itemTransactionDetailsHeaderFeeText"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary"
        tools:text="0.004638685 transaction fee"
        style="@style/Text" />

    <TextView
        android:id="@+id/itemTransactionDetailsHeaderStatusText"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary"
        tools:text="Sept 6, 2022 at 16:59"
        style="@style/Text" />

    <TextView
        android:id="@+id/itemTransactionDetailsMessageText"
        android:background="@drawable/bkg_transaction_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        tools:text="@tools:sample/lorem/random"
        style="@style/Text" />

</LinearLayout>